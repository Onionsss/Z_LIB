<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/select_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/select_dialog_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x20"
        tools:text="标题"
        android:textColor="@color/gray_3"
        android:textSize="@dimen/s14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/select_dialog_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x10"
        app:layout_constraintTop_toBottomOf="@+id/select_dialog_title"
        tools:text="确定要发送吗?"
        android:textColor="@color/gray_6"
        android:textSize="@dimen/s13"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/select_dialog_confirm"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/x15"
        android:paddingRight="@dimen/x15"
        app:layout_constraintTop_toBottomOf="@+id/select_dialog_content"
        android:paddingLeft="@dimen/x15"
        android:paddingTop="@dimen/x20"
        android:text="确定"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:textSize="@dimen/s12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/select_dialog_cancel"
        app:layout_constraintRight_toLeftOf="@+id/select_dialog_confirm"
        android:paddingRight="@dimen/x15"
        android:paddingLeft="@dimen/x15"
        app:layout_constraintBaseline_toBaselineOf="@+id/select_dialog_confirm"
        android:text="取消"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:textSize="@dimen/s12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.AppCompatTextView>

</androidx.constraintlayout.widget.ConstraintLayout>