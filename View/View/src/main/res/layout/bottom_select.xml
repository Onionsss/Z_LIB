<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@drawable/bottom_select_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bottom_select_tips"
            android:layout_marginTop="@dimen/x10"
            android:textColor="#999999"
            android:textSize="@dimen/s12"
            android:layout_gravity="center_horizontal"
            tools:text="确定要这样吗?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bottom_select_ok"
            android:paddingTop="@dimen/x25"
            android:paddingBottom="@dimen/x10"
            android:textColor="#ff2d2d"
            android:gravity="center"
            android:textSize="@dimen/s16"
            android:layout_gravity="center_horizontal"
            tools:text="确认"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bottom_select_no"
            android:paddingTop="@dimen/x15"
            android:textColor="#666666"
            android:textSize="@dimen/s16"
            android:layout_gravity="center_horizontal"
            tools:text="取消"
            android:gravity="center"
            android:paddingBottom="@dimen/x40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>